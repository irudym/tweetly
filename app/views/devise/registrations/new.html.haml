%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, class: 'control-label col-sm-3'
    .col-sm-8
      = f.email_field :email, autofocus: true, class: 'form-control'
    .form-group
      = f.label :password, class: 'control-label col-sm-3'
      .col-sm-8
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :password_confirmation, class: 'control-label col-sm-3'
      .col-sm-8
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .form-group
      .col-sm-offset-3.col-sm-8
        = f.submit "Sign up", class: 'btn btn-default button-blue'
    .form-group
      .col-sm-offset-3.col-sm-8.links
        = render "devise/shared/links"
