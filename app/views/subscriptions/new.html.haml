= show_notice(notice)
= show_error(@users[:error])
= form_tag({controller: 'subscriptions', action: 'search'}, class: 'form-horizontal') do
  .form-group
    .row
      = label_tag :name, 'Find a user to follow',class: 'control-label col-sm-8'
    .row
      .col-sm-9
        = text_field_tag :name, nil, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-4
      = submit_tag 'Search', class: 'button button-gray'